<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="wrap_content"
    android:layout_height="311dp"
    android:orientation="vertical"

    android:background="@color/setsbackgroundtint"
    android:layout_gravity="center"
    >


    <androidx.cardview.widget.CardView
        android:layout_height="311dp"
        android:layout_width="340dp"

        app:cardElevation="30dp"
        android:layout_gravity="center"



        >


        <TextView
            android:id="@+id/textView4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="60dp"
            android:layout_marginStart="67dp"

            android:fontFamily="@font/robotobold"
            android:text="Add New Set"
            android:textAlignment="center"
            android:textColor="@color/usernamecolor"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/popupcat"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="120dp"


            android:background="@drawable/round_corner_popup"></EditText>

        <Button
            android:id="@+id/buttonAddset"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/round_corner"
            android:text="@string/addbuttonpopup"
            android:textColor="@color/popupbuttontext"
            android:textSize="25dp"
            android:fontFamily="@font/breeserifregular"
            ></Button>

        <ImageButton
            android:id="@+id/xcatpopup"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="20dp"

            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/xcolored" />
    </androidx.cardview.widget.CardView>

</LinearLayout>